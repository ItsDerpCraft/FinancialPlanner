<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_goal_card"
            android:background="@drawable/round_toggle_button3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Add Goal"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_purchase_card"
            android:background="@drawable/round_toggle_button3"
            android:text="Add Purchase"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_income_card"
            android:layout_width="match_parent"
            android:background="@drawable/round_toggle_button3"
            android:text="Add Income"
            android:textSize="45sp"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_balance_card"
            android:layout_width="match_parent"
            android:background="@drawable/round_toggle_button3"
            android:layout_height="150dp"
            android:textSize="45sp"
            android:text="Edit Balance"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"/>







    </LinearLayout>
</ScrollView>